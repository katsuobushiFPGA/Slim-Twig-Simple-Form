{% extends "base.html.twig" %}

{% block content %}
    <div style="text-align: center; margin-bottom: 30px;">
        <div style="background-color: #fff3cd; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
            <h3 style="color: #856404; margin: 0;">ステップ 2/3: 入力内容の確認</h3>
        </div>
        <p style="color: #666; font-size: 16px;">以下の内容でお問い合わせを送信いたします。内容をご確認ください。</p>
    </div>
    
    <div style="max-width: 500px; margin: 0 auto;">
        <div style="background-color: #f8f9fa; padding: 20px; border-radius: 5px; margin-bottom: 30px;">
            <h3 style="margin-top: 0; color: #333;">お問い合わせ内容</h3>
            
            <div style="margin-bottom: 15px;">
                <strong style="color: #555;">お名前:</strong>
                <div style="background-color: white; padding: 10px; margin-top: 5px; border-radius: 3px;">
                    {{ data.name }}
                </div>
            </div>
            
            <div style="margin-bottom: 15px;">
                <strong style="color: #555;">メールアドレス:</strong>
                <div style="background-color: white; padding: 10px; margin-top: 5px; border-radius: 3px;">
                    {{ data.email }}
                </div>
            </div>
            
            <div style="margin-bottom: 0;">
                <strong style="color: #555;">お問い合わせ内容:</strong>
                <div style="background-color: white; padding: 10px; margin-top: 5px; border-radius: 3px; white-space: pre-wrap;">{{ data.message }}</div>
            </div>
        </div>
        
        <div style="text-align: center;">
            <form method="POST" action="/form/complete" style="display: inline-block; margin-right: 10px;">
                {% for key, value in data %}
                    <input type="hidden" name="{{ key }}" value="{{ value }}">
                {% endfor %}
                <button type="submit" 
                        style="background-color: #28a745; color: white; padding: 15px 30px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; font-weight: bold;">
                    お問い合わせを送信
                </button>
            </form>
            
            <form method="POST" action="/form/input" style="display: inline-block;">
                {% for key, value in data %}
                    <input type="hidden" name="{{ key }}" value="{{ value }}">
                {% endfor %}
                <button type="submit" 
                        style="background-color: #6c757d; color: white; padding: 15px 30px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
                    内容を修正
                </button>
            </form>
        </div>
    </div>
{% endblock %}
