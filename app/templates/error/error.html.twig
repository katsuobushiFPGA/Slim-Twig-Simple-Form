{% extends "base.html.twig" %}

{% block content %}
    <div style="text-align:center; padding:40px;">
        <h2 style="color:#c00;">{{ status_code }} {{ status_text }}</h2>
        <p style="margin-top:15px; color:#555;">{{ message }}</p>
        {% if details %}
            <div style="text-align:left; margin:20px auto; max-width:640px; background:#fafafa; padding:15px; border:1px solid #eee; border-radius:6px;">
                <ul style="padding-left:20px; margin:0;">
                {% for d in details %}
                    <li>{{ d }}</li>
                {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div style="margin-top:30px;">
            <a href="/" style="background:#007bff;color:#fff;padding:12px 28px;border-radius:5px;text-decoration:none;">ホームへ戻る</a>
        </div>
    </div>
{% endblock %}
