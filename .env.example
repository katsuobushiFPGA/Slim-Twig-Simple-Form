# 開発環境設定
# ホストのユーザーIDとグループIDを設定
USER_ID=1002
GROUP_ID=1002

# 環境設定
APP_ENV=development

# Docker Compose設定
# 開発環境: compose.yml:compose.database.yml
# 本番環境: compose.yml (MySQLなし)
COMPOSE_FILE=compose.yml:compose.database.yml

# 開発・テスト設定
INSTALL_DEV_DEPS=true
RUN_TESTS=true

# MySQL設定
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=slim_app
MYSQL_USER=slim_user
MYSQL_PASSWORD=slim_password
